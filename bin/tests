#! /bin/bash

pyclean () {
        find . -type f -name "*.py[co]" -delete
        find . -type d -name "__pycache__" -delete
}
export -f pyclean

if which entr > /dev/null; then
  find ./ -name "*.py" | PYTHONPATH=.:./src:./tests entr -r -d -c sh -c 'pyclean .; pyclean tests; green -vvv'
else
  export PYTHONPATH=.:./src:./tests
  pyclean .
  pyclean tests
  green -vvv
fi
